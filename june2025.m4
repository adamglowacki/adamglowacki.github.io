<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Draft of Guest Day (7 June 2025)</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css">
    <style>
      .container.is-limited {
        max-width: 750px !important;
      }
      .hero.dark-bg {
        background-color: #6a9b9b;
      }
      .box.dark-bg {
        background-color: #eeeeee;
      }
      .columns {
        border-bottom: 1px solid #000;
      }
      .columns:last-child {
        border-bottom: none;
      }
    </style>
  </head>
  <body>

    <section class="hero is-primary dark-bg">
      <div class="hero-body">
        <div class="container">
          <div class="columns is-vcentered">
            <div class="column">
              <h1 class="title">Draft of Guest Day Program (7 June 2025) &mdash; Sabbath Service</h1>
              <h2 class="subtitle">Warsaw Adventist International Group</h2>
            </div>
            <div class="column is-narrow">
              <figure class="image is-128x128">
                <img src="waig.png" alt="WAIG Logo">
              </figure>
            </div>
          </div>
        </div>
      </div>
    </section>

define(`ii', `<div class="columns"><div class="column is-2"><b>$1</b></div><div class="column is-6"><p>$2</p></div><div class="column is-4"><i>$3</i></div></div>')

    <section class="section">
      <div class="container is-limited">
        <h1 class="title">Sabbath School</h1>
        <h2 class="subtitle"><i></i></h2>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

              ii(`9:45', `Song Service',    `')
              ii(`',      `Welcome Remarks', `')
              ii(`',      `Opening Song',    `')
              ii(`',      `Opening Prayer', `')
              ii(`',      `Welcoming', `')
              ii(`',      `Special Song', `')
              ii(`',      `Short Testimony', `')
              ii(`',      `Special Song', `')
              ii(`',      `Small Group Discussion', `')
              ii(`',      `Hymn Song', `')
              ii(`',      `Prayer', `')

            </div>
          </div>
        </div>

        <h1 class="title">Break</h1>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

            ii(`', `Announcements', `')
            ii(`', `Song Service',  `')

            </div>
          </div>
        </div>

        <h1 class="title">Divine Service</h1>
        <h2 class="subtitle"><i></i></h2>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

              ii(`11:30', `Song', `')
              ii(`', `Pastoral prayer', `')
              ii(`', `Opening song', `')
              ii(`', `Opening prayer', `')
              ii(`', `Welcoming the visitors', `')
              ii(`', `Offertory reading', `')
              ii(`', `Offerings collection - song', `')
              ii(`', `Kids music', `')
              ii(`', `Scripture reading', `')
              ii(`', `Sermon', `')
              ii(`', `Appeal song', `')
              ii(`', `Closing song', `')
              ii(`', `Closing prayer', `')

            </div>
          </div>
        </div>

        <h1 class="title">Lunch</h1>
        <h2 class="subtitle"><i></i></h2>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

              ii(`12:45', `We enjoy delicious food', `')

            </div>
          </div>
        </div>

        <h1 class="title">Afternoon Service</h1>
        <h2 class="subtitle"><i></i></h2>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

              ii(`13:45', `Song Service', `')
              ii(`', `Hymn', `')
              ii(`', `Prayer', `')
              ii(`', `Special Song', `')
              ii(`', `Interactive Small Group Discussion (topic to be decided)', `')
              ii(`', `Ice breaker', `')
              ii(`', `Special Music', `')
              ii(`', `Closing Remarks', `')
              ii(`', `Closing Song', `')
              ii(`', `Closing Prayer', `')

            </div>
          </div>
        </div>

        <h1 class="title">Post-service</h1>
        <h2 class="subtitle"><i></i></h2>
        <div class="tile is-ancestor">
          <div class="tile is-vertical is-parent">
            <div class="tile is-child box dark-bg">

              ii(`16:00', `Let us take a group photo', `')
              ii(`16:05', `Cleaning the place', `')

            </div>
          </div>
        </div>

      </div>
    </section>
  </body>
</html>
